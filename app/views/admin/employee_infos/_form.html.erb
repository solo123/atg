<%= form_for( [:admin, @object], :remote => true) do |f| %>
  <div class="container">
  	<div class='span-8'>
	  <%= f.field_container :company_id do %>
	  	<%= f.label :company_id %><br />

			<%= f.select :company_id, Company.all.map { |c| [c.short_name, c.id] }, {}, :class => 'data-field' %>

	  <% end %>
	  <%= f.field_container :nickname do %>
	  	<%= f.label :nickname %><br />
	  	<%= f.text_field :nickname %>
	  <% end %>
	  <%= f.field_container :employ_date do %>
	  	<%= f.label :employ_date %><br />
      <%= f.text_field :employ_date, :class => 'date-picker' %>
	  <% end %>
	  <%= f.field_container :ssn do %>
	  	<%= f.label :ssn %><br />
	  	<%= f.text_field :ssn %>
	  <% end %>
	  <%= f.field_container :birthday do %>
	  	<%= f.label :birthday %><br />
      <%= f.text_field :birthday, :class => 'date-picker' %>
	  <% end %>
    <%= f.field_container :roles do %>
      <%= f.label :roles %><br />
      <%= f.hidden_field :roles %>
      <% InputType.get_list('roles').each do |role| %>
        <%= check_box_tag "role[#{role.type_text}]", role.type_value, @object.roles && @object.roles.include?(role.type_value), {:id => dom_id(role), :onchange => 'roles_changed();'} %>
        <%= label_tag dom_id(role), role.type_text %>
      <% end %>
    <% end %>
    </div>
    <div class='span-8 last'>
	  	Telephones:
      <%= add_object_js_link 'Add', f, :telephones, '/admin/user_infos/form_tel', '#tels'  %>
      <br /> 
      <div id='tels'>
        <%= f.fields_for :telephones do |tel_form| %>
        	<%= render :partial => '/admin/user_infos/form_tel', :locals => { :f => tel_form} %>
        <% end %>
      </div><hr />
	  	Emails:
      <%= add_object_js_link 'Add', f, :emails, '/admin/user_infos/form_email', '#emails'  %>
      <br /> 
      <div id='emails'>
        <%= f.fields_for :emails do |email_form| %>
        	<%= render :partial => '/admin/user_infos/form_email', :locals => { :f => email_form} %>
        <% end %>
      </div>
      <hr />
	  	
	  	Addresses:
      <%= add_object_js_link 'Add', f, :addresses, '/admin/user_infos/form_address', '#addresses'  %>
      <br /> 
      <div id='addresses'>
        <%= f.fields_for :addresses do |adr_form| %>
        	<%= render :partial => '/admin/user_infos/form_address', :locals => { :f => adr_form} %>
        <% end %>
      </div>

    </div>
	</div>

  <%= render :partial => 'admin/shared/status', :locals => {:f => f} %> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
